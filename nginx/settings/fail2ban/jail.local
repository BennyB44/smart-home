[DEFAULT]
ignoreip = 172.16.10.0/24
bantime = 172800
maxretry = 2

[nginx-4xx]
enabled = true
action = iptables-multiport[name=4xxResponse, port="http,https"]
filter = nginx-4xx
logpath = /var/log/nginx/access.log

[nginx-naxsi]
enabled = true
action = iptables-multiport[name=NAXSI, port="http,https"]
filter = nginx-naxsi
logpath = /var/log/nginx/*error.log
