# AppDaemon
# ---------
# Ignore the fact that Alexa response bodies are "too big":
BasicRule wl:2 "mz:BODY|$URL:/api/appdaemon/alexa";

# HASS
# -----
# Allow HASS auth (0.77 and beyond) and webhooks to work:
BasicRule wl:0 "mz:BODY|$URL_X:^/auth";
BasicRule wl:1101 "mz:ARGS|BODY";

# Deal with double quoting in Jinja templates:
BasicRule wl:0 "mz:$BODY_VAR:template|$URL_X:^/api/template";

# Portainer
# -----
# Ignore Portainer issues that prevent it from loading through NAXSI:
BasicRule wl:1001 "mz:ARGS|$URL_X:^/api";
BasicRule wl:1310 "mz:ARGS|$URL_X:^/api";
BasicRule wl:1315 "mz:HEADERS";
BasicRule wl:2 "mz:BODY|$URL_X:^/api";
